{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "target": "es2019",
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./lib",
  },
  "files": [
    "src/index.ts",
    "src/config.ts",
    "src/extract.ts",
    "src/git.ts",
    "src/alert.ts",
    "test/extract.ts",
    "test/config.ts",
    "test/alert.ts",
  ]
}
